<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_bc"
    tools:context=".ParentChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="@color/teal_700"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textAlignment="center"
                android:textColor="#2CA7E0"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25dp"
                />

            <EditText
                android:id="@+id/editText_change_pwd_current"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Current Password"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"
                />

            <Button
                android:id="@+id/button_change_pwd_authenticate"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Authenticate"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                />

            <TextView
                android:id="@+id/textView_change_pwd_authenticated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#2CA7E0"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25dp"
                />

            <EditText
                android:id="@+id/editText_change_pwd_new"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="New Password"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"
                />

            <EditText
                android:id="@+id/editText_change_pwd_new_confirm"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:padding="20dp"
                />
            <Button
                android:id="@+id/button_change_pwd"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Change Password"
                android:textColor="#fff"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>